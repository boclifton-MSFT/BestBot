{
  "inputs": [
    {
      "type": "promptString",
      "id": "function-mcp-extension-key",
      "description": "The Azure Function MCP extension key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "function-mcp-extension-baseUrl",
      "description": "The Azure Function MCP extension base URL",
      "password": false
    }
  ],
  "servers": {
    "BestPractices-local": {
      "type": "sse",
      "url": "http://localhost:7071/runtime/webhooks/mcp/sse"
    },
    "BestPractices-Azure": {
      "type": "sse",
      "url": "https://${input:function-mcp-extension-baseUrl}.azurewebsites.net/runtime/webhooks/mcp/sse",
      "headers": {
        "x-functions-key": "${input:function-mcp-extension-key}"
      }
    }
  }
}